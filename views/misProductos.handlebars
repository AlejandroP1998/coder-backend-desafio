<section class="container">
  <nav>
    <a href="/api/products/misProductos/create" class="button_slide slide_down">Crear producto</a>
    <a href="/api/products" class="button_slide slide_down">regresar</a>
  </nav>


  <section class="prod-container">
    {{#if hayDocs}}
    {{#each docs}}
    <div class="prod-subcontainer">
      <h2>{{this.title}}</h2><br>
      <h4>{{this.description}}</h4><br>
      <h4>Propietario: {{this.owner}}</h4><br>
